<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/Gainsboro">

    <ListView
        android:id="@+id/llista_missatges"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/boto_enviar"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"
        android:fastScrollEnabled="true" />

    <EditText
        android:id="@+id/text_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/boto_enviar"
        android:layout_below="@+id/llista_missatges"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/boto_enviar"
        android:layout_alignParentBottom="true"
        android:background="#ffffffff"
        android:inputType="textImeMultiLine"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp" />

    <Button
        android:id="@+id/boto_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:layout_alignParentRight="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
